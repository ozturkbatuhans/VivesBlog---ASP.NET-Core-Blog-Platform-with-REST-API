@model VivesBlog.Model.Dto.ArticleDto

<tr>
    <td>@Model.CreatedDate.ToShortDateString() @Model.CreatedDate.ToShortTimeString()</td>
    <td>@Model.AuthorName</td>
    <td>@Model.Title</td>
    <td>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <button type="button"
                class="btn btn-danger"
                data-bs-toggle="modal"
                data-bs-target="#deleteModal"
                data-id="@Model.Id"
                data-type="deleteButton">
            Delete
        </button>
    </td>
</tr>